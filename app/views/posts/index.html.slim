.container
  .text-center
    br/
  .card.text-black.shadow.rounded.p-2
    - @posts.reverse_each do |post|
      .row.no-gutters
          .col-md-9.p-1.d-flex.text-left 
            .my-auto.text-left
              - if !post.user
                strong ShakeShack 
                | ~ #{post.post_content}
              - else
                div style="color: #{post.user.post_color}"
                  strong = post.user.user_name
                  |  ~ #{post.post_content}
          - if current_user
            .col-md-1.my-auto
              .card-body.p-1.text-right
                - if can? :update, post
                  = link_to 'Edytuj', edit_post_path(post)
                |  
                - if can? :destroy, post
                  = link_to 'Usu≈Ñ', post, data: { confirm: 'Are you sure?' }, method: :delete
          .col-md-2.my-auto
            .text-right
              small.text-muted #{post.created_at.to_s.split(" ")[0]}
              |  
              small.text-muted #{post.created_at.to_s.split(" ")[1]}
    
    
    - if (current_user)&&(can? :create, Post)
      = form_for @new_post do |f|
        .input-group.mt-1
          .input-group-prepend
            = f.submit "Dodaj", class: "button-addon1 btn btn-primary"
          = f.text_field :post_content, class: "form-control", placeholder: "I <3 ZUMBA" 



